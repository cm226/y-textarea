{
  "name": "y-textarea",
  "description": "Text area and input binding for Y.JS",
  "files": [
    "dist"
  ],
  "main": "./dist/y-textArea.umd.js",
  "module": "./dist/y-textArea.es.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/y-textArea.d.ts",
        "default": "./dist/y-textArea.es.js"
      },
      "require": {
        "types": "./dist/y-textArea.d.ts",
        "default": "./dist/y-textArea.umd.js"
      }
    }
  },
  "types": "./dist/y-textArea.d.ts",
  "version": "1.0.2",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "version": "npm run build",
    "release": "np",
    "test": "echo \"No test specified\"",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/textarea-caret": "^3.0.1",
    "fast-diff": "^1.2.0",
    "np": "^7.6.3",
    "prettier": "^2.8.3",
    "rectangle-overlap": "^2.0.0",
    "textarea-caret": "^3.1.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "y-websocket": "^1.3.18"
  },
  "peerDependencies": {
    "yjs": "^13.5.27"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cm226/y-textarea.git"
  },
  "homepage": "https://github.com/cm226/y-textarea#readme",
